%html
  %head
    %link{ :rel => "shortcut icon", :type => "image/x-icon", :href => "favicon.ico" }
    %link{ :href => "https://fonts.googleapis.com/css?family=Lato", :rel => "stylesheet", :type => "text/css"}
    %link{ :href => "https://fonts.googleapis.com/css?family=Volkhov:700", :rel => "stylesheet", "type" => "text/css" }
    %link{ :rel => "stylesheet", :href => "main.css"}
    %meta{ :charset => "UTF-8" }
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0, minimum-scale=1.0"}
    %title= "#{@title} | Jennie's Website"
  %body
    .grid
      .row
        .col-2
          %img{ :src => "strawberry-logo.png", :class => "logo", :alt => "logo of strawberry kid"}
        .col-10
          %h1= @title
      %nav
        %ul
          %li
            %a{ :href => "/" }
              home
          %li
            %a{ :href => "about" }
              about
          %li
            %a{ :href => "project" }
              projects
          %li
            %a{ :href => "blog" }
              blog
      = yield
      %footer
        .row
          .col-4.center-text
            This website was created by
            %a{ :href => "https://www.linkedin.com/in/jenniebuechner"}
              Jennie Buechner
          .col-4.center-text
            ="Copyright #{ Time.now().year }"
          .col-4.center-text
            Check out mmy work on Github:
            %a{ :href => "https://github.com/jbuechs"}
              jbuechs
